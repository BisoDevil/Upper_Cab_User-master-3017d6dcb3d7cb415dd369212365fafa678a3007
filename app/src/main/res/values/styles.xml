<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorBasic</item>
        <item name="colorPrimaryDark">@color/colorBasic</item>
        <item name="colorAccent">@color/colorBasic</item>

    </style>

    <style name="Splash" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorBasic</item>
        <item name="colorPrimaryDark">@color/colorBasic</item>
        <item name="colorAccent">@color/colorBasic</item>

        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="User" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorBasic</item>
        <item name="colorPrimaryDark">@color/colorBasic</item>
        <item name="colorAccent">@color/colorBasic</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Map" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorBasic</item>
        <item name="colorPrimaryDark">@color/colorBasic</item>
        <item name="colorAccent">@color/colorBasic</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Splash.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Splash.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />



    <style name="Theme.Transparent" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="colorPrimary">@color/colorBasic</item>
        <item name="android:windowCloseOnTouchOutside">true</item>
        <item name="colorPrimaryDark">@color/colorBasic</item>
        <item name="colorAccent">@color/colorBasic</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <style name="mySpinnerItemStyle" parent="Base.Widget.AppCompat.Spinner">
        <item name="android:textColor">@color/colorFont</item>
    </style>

    <style name="Button_Background" parent="Widget.AppCompat.Button.Small">
        <item name="background">@color/colorBasic</item>

        <item name="android:radius">5dp</item>

    </style>

    <style name="RatingBar" parent="Theme.AppCompat">
        <item name="colorControlNormal">@color/colorBasic</item>
        <item name="colorControlActivated">@color/colorFont</item>
    </style>

    <style name="ListFont" parent="Widget.AppCompat.ListView">
        <item name="android:textColor">@color/colorFont</item>
        <item name="android:typeface">sans</item>
    </style>
</resources>
